<!DOCTYPE html>
<html lang="en">
<head>
    <%- include ('../partials/Head')%>
</head>
<body class="container">

<header>
    <%- include ('../partials/Header') %>
</header>

<main>
<div class="row">
    <div class="col-sm-8">    
        <div class="jumbotron">
            <h1>This is great</h1>
            <p>Welcome to templating using EJS</p>
            <h2>Tagline</h2>
            <p><%=tagline%></p>
            <ul>
                <%animals.forEach((animal)=>{%>
                 <li>
                     <%=animal.name%>
                 </li>
                <%});%>
            </ul>
        </div>
    </div>

    <div class="col-sm-4">        
        <div class="well">
            <h3>Look I'm A Sidebar!</h3>
        </div>
    </div>

</div>
</main>

<footer>
    <%-include ('../partials/footer') %>
</footer>

